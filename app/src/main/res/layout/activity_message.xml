<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MessageActivity">

    <RelativeLayout
        android:id="@+id/chatTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backward"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon"
            android:padding="8dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/chatRoomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="#000000"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/matchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매칭 완료"
            android:background="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messageActivity_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/messageActivity_btn"
        android:layout_below="@+id/chatTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

    </androidx.recyclerview.widget.RecyclerView>

    <EditText
        android:id="@+id/messageActivity_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/messageActivity_btn" />

    <Button
        android:id="@+id/messageActivity_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="전송" />

</RelativeLayout>