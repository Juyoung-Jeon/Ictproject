<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:id="@+id/mainTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_loading" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeuljirottf"
                android:text="Share Ability"
                android:textColor="@color/black"
                android:textSize="40dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainTitle"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="40dp">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="6dp"
            android:background="@color/white"
            android:hint="이메일"
            android:padding="4dp"
            android:textColorHint="#77383A3C" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:padding="4dp"
            android:textColorHint="#77383A3C" />

        <CheckBox
            android:id="@+id/save_Id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:buttonTint="#000000"
            android:text="아이디 저장" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginMethod"
        android:orientation="vertical">

        <Button
            android:id="@+id/loginButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:text="로그인" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/snsLoginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButtonLayout"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/kakaoLogin"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_iconfinder_kakao_talk2_289120"
            android:drawablePadding="5dp"
            android:text="카카오로 로그인" />

        <Button
            android:id="@+id/emailLogin"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_iconfinder_mail_115714"
            android:drawablePadding="5dp"
            android:text="이메일로 로그인" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/snsLoginLayout"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="회원가입" />
    </LinearLayout>


</RelativeLayout>